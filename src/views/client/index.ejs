<%- include('../partials/header', { 
    tittle: 'Clients',
    addStyles: true, 
    styles:
        [ 'https://unpkg.com/bootstrap-table@1.21.1/dist/bootstrap-table.min.css',
        'https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css',
        'https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css' ]
}); %>
    <!-- Page content-->
    <div class="container-fluid">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">Clients</h1>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnAddClient"><i class="fa-solid fa-plus"></i></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-filter"></i></button>
                </div>
            </div>
        </div>

        <div class="col-lg-12 col-md-12 col-xs-12 mt-3">
            <div class="card"><!-- border-0 -->
                <div class="card-body">
                    <table
                        id="listClients"
                        data-toolbar="#toolbar"
                        data-toggle="table"
                        data-ajax="restRequest"
                        data-search="true"
                        data-pagination="true"
                        data-show-refresh="true"
                        data-show-fullscreen="true"
                        data-show-columns="true"
                        data-locale="es-MX"
                        data-row-style="rowStyle"
                        data-page-size="50"
                        class="tableClients">
                        <thead>
                            <tr>
                                <th data-field="IdUser">Client</th>
                                <th data-field="Alias">Alias</th>
                                <th data-field="FirstName">FirstName</th>
                                <th data-field="LastName">LastName</th>
                                <th data-field="Email">Email</th>
                                <th data-field="State" data-sortable="true">State</th>
                                <th data-field="City" data-sortable="true">City</th>
                                <th data-field="PhoneNumber" data-visible="false">PhoneNumber</th>
                                <th data-field="IsActive" data-sortable="true" data-align="center">Active</th>
                                <th data-field="Events" data-formatter="rowsOptionsClients" data-align="center">Events</th>
                                <th data-field="Id" data-visible="false">Id</th>
                                <th data-field="code" data-visible="false">Code</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>

<%- include('../partials/footer', { 
    addScripts: true, 
    scripts: [
        'https://unpkg.com/bootstrap-table@1.21.1/dist/bootstrap-table.min.js',
        'https://unpkg.com/bootstrap-table@1.20.2/dist/locale/bootstrap-table-es-MX.min.js',
        'https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js',
        '/js/client.js'
    ]
}); %>
